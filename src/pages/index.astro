---
// SEO optimizado
const title = "DasPix - Desarrollo Web Profesional | Páginas Web Modernas y Responsivas";
const description = "Creamos sitios web profesionales, modernos y optimizados. Desarrollo web, e-commerce, diseño UI/UX y marketing digital. Transforma tu presencia digital con DasPix.";
const keywords = "desarrollo web, páginas web, diseño web, e-commerce, UI/UX, marketing digital, sitios web responsivos, desarrollo frontend, páginas web profesionales, diseño moderno";
const canonicalURL = "https://www.daspix.cl";

// Imports
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import Portfolio from '../components/Portfolio.astro';
import About from '../components/About.astro';
import Testimonials from '../components/Testimonials.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="DasPix" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="DasPix" />
    <meta property="og:image" content={`${canonicalURL}/DasPix.png`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${canonicalURL}/DasPix.png`} />
    <meta name="twitter:site" content="@DasPix" />
    
    <!-- Brand/Logo Meta Tags -->
    <meta property="og:logo" content={`${canonicalURL}/DasPix.png`} />
    <meta name="msapplication-TileImage" content="/DasPix.png" />
    
    <!-- Additional SEO Meta Tags -->
    <meta name="theme-color" content="#3577EF" />
    <meta name="msapplication-TileColor" content="#3577EF" />
    <meta name="language" content="es" />
    <meta name="geo.region" content="CL" />
    <meta name="geo.placename" content="Chile" />
    
    <!-- Preload Critical Resources -->
    <link rel="preload" href="/DasPix.png" as="image" />
    <link rel="preload" href="/favicon.svg" as="image" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Favicon variations for better brand recognition -->
    <link rel="apple-touch-icon" sizes="180x180" href="/DasPix.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "DasPix",
        "url": "https://www.daspix.cl",
        "logo": {
          "@type": "ImageObject",
          "url": "https://www.daspix.cl/DasPix.png",
          "width": "512",
          "height": "512"
        },
        "image": "https://www.daspix.cl/DasPix.png",
        "description": "Empresa chilena especializada en desarrollo web profesional, diseño UI/UX y marketing digital",
        "sameAs": [
          "https://www.instagram.com/daspix",
          "https://www.linkedin.com/company/daspix"
        ],
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "CL"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "customer service",
          "availableLanguage": "Spanish"
        },
        "sameAs": [
          "https://www.daspix.cl"
        ],
        "offers": {
          "@type": "Offer",
          "category": "Desarrollo Web"
        }
      }
    </script>
  </head>
  <body class="font-sans antialiased">
    <Navigation />
    <main role="main">
      <Hero />
      <Services />
      <Portfolio />
      <About />
      <Testimonials />
      <Contact />
    </main>
    <Footer />

    {/* Existing styles and script are preserved below */}
    <style>
      html {
        scroll-behavior: smooth;
      }
      
      body {
        overflow-x: hidden;
      }

      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
      }

      ::-webkit-scrollbar-track {
        background: #f1f1f1;
      }

      ::-webkit-scrollbar-thumb {
        background: #3577EF;
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: #F57070;
      }

      /* Intersection Observer animations */
      .animate-on-scroll {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.6s ease-out;
      }

      .animate-on-scroll.animate {
        opacity: 1;
        transform: translateY(0);
      }
    </style>

    <script>
      // Intersection Observer for scroll animations
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate');
          }
        });
      }, observerOptions);
    </script>
  </body>
</html>